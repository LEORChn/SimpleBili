<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.LEORChn.SimpleBili" android:versionCode="5"
    android:versionName="Beta 0.5" >

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="19" /><!--8=2.2;19=4.4-->
	<!--<uses-permission android:name="android.permission.READ_FRAME_BUFFER"/>-->
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
	<!--uses-permission android:name="android.permission.WRITE_SETTINGS"/-->
	<uses-permission android:name="android.permission.WAKE_LOCK"/>
    <application android:name="leorchn.App"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
		android:theme="@style/BlackTheme"
        android:label="@string/app_name">
		<!--android:manageSpaceActivity="appforms.Settings"-->
        <activity android:name="appforms.Main_Feeds"
			android:label="@string/app_name_main"
			android:icon="@drawable/ic_launcher"
			android:configChanges="orientation|screenSize"
			android:taskAffinity="appform.Main_Feeds"
			android:launchMode="singleTask"><!--
			android:process=":Activity.Main"
			android:taskAffinity="appform.Main_Feeds"
			android:launchMode="singleTask"
			android:process=":Activity.Main"-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity android:name="appforms.VideoDetail" android:configChanges="orientation|screenSize"/>
		<activity android:name="appforms.VideoDecryptor" android:configChanges="orientation|screenSize"/>
		<activity android:name="appforms.VideoPlaySimple" android:configChanges="orientation|screenSize" android:screenOrientation="landscape"/>
		<activity android:name="appforms.VideoHistory" android:configChanges="orientation|screenSize"/>
		<activity android:name="appforms.MyFavorite" android:configChanges="orientation|screenSize"/>
		<activity android:name="appforms.UpZone" android:configChanges="orientation|screenSize"/>
		<activity android:name="appforms.TestChangeLayout" android:configChanges="orientation|screenSize"/>
		<activity android:name="appforms.Settings"
			android:label="@string/app_name_settings"
			android:icon="@drawable/ic_settings"
			android:configChanges="orientation|screenSize"
			android:taskAffinity="appform.Settings"
			android:launchMode="singleTask"><!--
			android:process=":Activity.Main"><!
			android:taskAffinity="appform.Settings"
			android:process=":Activity.Settings"-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity android:name="appforms.Login" android:configChanges="orientation|screenSize" android:process=":Activity.WebView"/><!-- android:launchMode="singleInstance"/-->
		<activity android:name="appforms.PermissionGuide" android:configChanges="orientation|screenSize"/>
		
		<activity android:name="appforms.VideoDetailEntrance" android:configChanges="orientation|screenSize"
			android:label="用简哔打开视频"
			android:exported="true">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="bilibili" android:host="video" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="http" android:host="bilibili.kankanews.com" android:pathPattern="/video/av.*" />
				<data android:scheme="http" android:host="bilibili.tv" android:pathPattern="/video/av.*" />
				<data android:scheme="http" android:host="bilibili.cn" android:pathPattern="/video/av.*" />
				<data android:scheme="http" android:host="bilibili.com" android:pathPattern="/video/av.*" />
				<data android:scheme="http" android:host="www.bilibili.tv" android:pathPattern="/video/av.*" />
				<data android:scheme="http" android:host="www.bilibili.cn" android:pathPattern="/video/av.*" />
				<data android:scheme="http" android:host="www.bilibili.com" android:pathPattern="/video/av.*" />
				<data android:scheme="http" android:host="bilibili.smgbb.cn" android:pathPattern="/video/av.*" />
				<data android:scheme="http" android:host="m.acg.tv" android:pathPattern="/video/av.*" />
				<data android:scheme="http" android:host="www.bilibili.com" android:pathPattern="/mobile/video/av.*" />
			</intent-filter>
			<intent-filter><!--分享文本到此处-->
				<action android:name="android.intent.action.SEND" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="text/plain" />
			</intent-filter>
		</activity>
		
		<service android:name="appforms.LiveUpgrade" android:label="@string/service_name_liveupgrade" android:process=":Service.LiveUpgrade"/>
		<service android:name="appforms.GetAllowance" android:label="@string/service_name_getallowance" android:process=":Service.GetAllowance"/>
		<service android:name="appforms.DailyQuest" android:label="@string/service_name_dailyquest" android:process=":Service.DailyQuest"/>
		<service android:name="appforms.MemMonitor"/>
    </application>

</manifest>
